{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "declarationDir": "lib",
    "target": "esnext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true, // 生成声明文件
    "lib": ["esnext", "dom"],
    "paths": {
      "@sdv": ["./packages"],
      "@sdv/*": ["./packages/*"],
    }
  },
  "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.tsx", "./**/*.vue", "env.d.ts"]
}
